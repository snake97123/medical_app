<div class="contents-row">
 <h1 class="title">
   <%= link_to "戻る", root_path, class:"back" %>
 </h1>
  <div class="container-in">


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2>ログイン</h2>

     <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, placeholder:"パスワード", autocomplete: "current-password" %>
  </div>



  <div class="actions">
    <%= f.submit "ログイン", class: "btn" %>

  </div>
<% end %>
</div>
</div>




