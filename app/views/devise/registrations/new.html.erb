<div class="contents row">
  <h1 class="title">
    <%= link_to "お薬相談室", root_path%>
  </h1>
  <div class="container">
<h2>新規登録</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :nickname, "ユーザー名(必須)" %><br />
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号(必須)"%><br />
    <%= f.text_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス(必須)"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(必須)" %>
    <% if @minimum_password_length %>
    <em><%= "(6文字以上)" %> </em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード再入力(必須)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録する", class: "btn"%>
  </div>
  <% end %>
 </div>
</div>




