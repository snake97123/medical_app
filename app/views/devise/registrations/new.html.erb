<div class="contents-row">
 <h1 class="title">
   <%= link_to "戻る", root_path, class:"back" %>
</h1>
  <div class="container-in">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2>新規登録</h2>
    

  <div class="field">
    <%= f.label :nickname, "ユーザー名(必須)"%><br />
    <%= f.text_field :nickname, placeholder:"ユーザー名(必須)", size:40 %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号(必須)"%><br /> 
    <%= f.text_field :phone_number,placeholder:"電話番号(必須)", size:40 %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス(必須)"%><br />
    <%= f.email_field :email, autofocus: true, placeholder:"メールアドレス（必須）", autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(必須)" %>
    <% if @minimum_password_length %>
    <em><%= "(6文字以上)" %> </em>
    <% end %><br />
    <%= f.password_field :password,  placeholder:"パスワード(必須)", autocomplete:"new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,"パスワード再入力(必須)" %><br />
    <%= f.password_field :password_confirmation,  placeholder:"パスワード再入力（必須）", autocomplete:"new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録する", class: "btn"%>
  </div>
  <% end %>
 </div>
</div>




