<div class="inner">
   <h1 class="title">
     <%= link_to "お薬相談室", root_path%>
   </h1>
   <div class="container">
 <div class="question-wrapper">
  <ul>
    <li>
    質問：
    <%= @question.title %>
    </li>
    <li>
    質問内容：
    <%= @question.content%>
    </li>
  </ul>
  </div>
</div>
</div>

<div class= "question-manage">
  <% if user_signed_in? %>
      <% if current_user.id === @question.user_id%>
   <%= link_to "編集する", edit_question_path, class:"question_btn" %>
   <%= link_to "削除する", question_path, method: :delete, class:"question_btn" %>
        <% else %>
   <%= link_to "回答する", new_question_answer_path(@question.id), class:"answer_btn" %>
    <% end %>
  <% end %>
  </div>
  <div class="answer-lists">回答一覧
  <% @answers.each do |answer| %>
  <li class="answer-list">
   <%= answer.text %>
   </li>
   <li class="answer-list-name">
   <% if user_signed_in? %>
     <% if current_user.id === answer.user_id %>
   <%= answer.user.nickname%>
   <%= link_to "編集する",edit_question_answer_path(@question, answer) , class:"answer-edit-btn" %>
   <%= link_to "削除する",  question_answer_path(@question, answer),method: :delete, class:"answer-delete-btn"%>
      <% end %>
      <% end %>
   </li>
   <% end %>
   </div>
  <%= render "shared/footer"%>
  