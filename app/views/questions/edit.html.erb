<h1 class="title">
<%= link_to "お薬相談室", root_path%>
</h1>
<div class="container">
<%= form_with(model: @question, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "題名",class: "question-title" %><br />
    <%= f.text_field :title, class: "question-title", size:"60×5" %>
  </div>

  <div class="field">
    <%= f.label :content, "質問内容", class: "content" %><br />
    <%= f.text_area :content, class: "content", size:"40x5" %>
  </div>

  <div class="question-btn-contents">
     <%= f.submit "編集する", class:"btn" %>
     <%= link_to "トップページに戻る", root_path, class:"back-btn" %>
  </div>
<% end %>
</div>