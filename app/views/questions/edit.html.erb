<div class="contents-row">
<h1 class="title">
 <%= link_to "戻る", :back, class:"back" %>
</h1>
<div class="container-in">
<div class="box">
<%= form_with(model: @question, local: true) do |f|%>
  <div class="field">
    <%= f.label :title, "題名",class: "questions-title" %><br />
    <%= f.text_field :title, class: "questions-title", size:"40×5" %>
  </div>

  <div class="field">
    <%= f.label :content, "質問内容", class: "content" %><br />
    <%= f.text_area :content, class: "content", size:"40x5" %>
  </div>

  <div class="question-btn-contents">
     <%= f.submit "編集する", class:"btn" %>
     </div> 
  </div>
<% end %>
</div>
</div>
