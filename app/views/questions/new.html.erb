<div class="contents-row">
<h1 class="title">
   <%= link_to "戻る", root_path, class:"back" %>
</h1>
  <div class="container-in">
  <div class="box">
<%= form_with(model: @question, local: true) do |f|%>
<%= render 'layouts/error_messages', model: f.object %>
<h2>質問投稿</h2>
  <div class="field">
    <%= f.label :title, "題名" %><br />
    <%= f.text_field :title, placeholder:"題名", class: "questions-title" %>
  </div>

  <div class="field">
    <%= f.label :content, "質問内容" %><br />
    <%= f.text_area :content, placeholder:"質問内容", class: "content"%>
  </div>

  <div class="question-btn-contents">
     <%= f.submit "質問する", class:"btn" %>
  </div>
  </div>
 </div>
</div>
<% end %>

