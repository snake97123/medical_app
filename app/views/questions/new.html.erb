<div class="contents row">
<h1 class="title">
<%= link_to "お薬相談室", root_path%>
</h1>
  <div class="container">
<%= form_with(model: @question, local: true) do |f|%>
<%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <%= f.label :title, "題名" %><br />
    <%= f.text_field :title, class: "question-title", size:"60×5" %>
  </div>

  <div class="field">
    <%= f.label :content, "質問内容" %><br />
    <%= f.text_area :content, class: "content", size:"40x5" %>
  </div>

  <div class="question-btn-contents">
     <%= f.submit "質問する", class:"btn" %>
     <%= link_to "戻る", root_path, class:"back-btn" %>
  </div>
 </div>
</div>
<% end %>