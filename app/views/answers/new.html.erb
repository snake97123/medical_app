  <div class="contents-row">
  <h1 class="title">
  <%= link_to "お薬相談室", root_path, class:"title"%>
  </h1>
  <div class="container">
  <%= form_with(model:@answer,url: question_answers_path, local: true) do |f|%>
  <div class="field">
    <%= f.label :text, "回答", class: "answer-content" %><br />
    <%= f.text_area :text, class: "answer-content", size:"40x5"%>
  </div>

  <div class="question-btn-contents">
     <%= f.submit "回答する", class:"btn" %> 
     <%= link_to "戻る", :back, class:"back-btn" %>
  </div>  
  <% end %>
  </div>
 </div>
<%= render "shared/footer"%>